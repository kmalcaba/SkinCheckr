<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trishiaanne.skincheckr.History"
    tools:layout_editor_absoluteY="25dp">

    <SeekBar
        android:id="@+id/itchSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/scalingSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itchProgress" />

    <TextView
        android:id="@+id/itchProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:text="Itchiness: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/itchSeekbar"
        app:layout_constraintEnd_toStartOf="@+id/noRadio"
        app:layout_constraintStart_toStartOf="@+id/scalingProgress"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <SeekBar
        android:id="@+id/scalingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/burningSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itchSeekbar" />

    <TextView
        android:id="@+id/scalingProgress"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:text="Scaling/Peeling: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/scalingSeekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itchProgress" />

    <SeekBar
        android:id="@+id/burningSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/sweatingSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingSeekbar" />

    <TextView
        android:id="@+id/burningProgress"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Burning: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/yesRadio"
        app:layout_constraintStart_toStartOf="@+id/scalingProgress"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sweatingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/crustingProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burningSeekbar" />

    <TextView
        android:id="@+id/sweatingProgress"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:layout_marginBottom="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="59dp"
        android:text="Sweating: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/crustingProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingSeekbar" />

    <SeekBar
        android:id="@+id/crustingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crustingProgress" />

    <TextView
        android:id="@+id/crustingProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:text="Crusting: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/crustingSeekbar"
        app:layout_constraintEnd_toEndOf="@+id/yesRadio"
        app:layout_constraintStart_toStartOf="@+id/sweatingProgress"
        app:layout_constraintTop_toBottomOf="@+id/sweatingSeekbar" />

    <Button
        android:id="@+id/reviewHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/buttoncurve"
        android:text="DONE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Patient History"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:text="Number of days: "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="304dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="108dp"
        android:text="1 = No Symptom   2-4 = Mild Symptom   7-10 = Extreme Symptom"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/noRadio"
        app:layout_constraintStart_toStartOf="@+id/itchProgress"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editDays"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:layout_marginStart="134dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="16dp"
        android:text="Is it bleeding?"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/reviewHistory"
        app:layout_constraintEnd_toStartOf="@+id/noRadio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crustingSeekbar" />

    <RadioButton
        android:id="@+id/yesRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Yes"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/noRadio"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <RadioButton
        android:id="@+id/noRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="27dp"
        android:text="No"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yesRadio"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</android.support.constraint.ConstraintLayout>