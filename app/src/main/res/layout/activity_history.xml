<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trishiaanne.skincheckr.History"
    tools:layout_editor_absoluteY="25dp">

    <SeekBar
        android:id="@+id/itchSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/scalingSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/itchProgress"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="33dp"
        android:text="Itchiness: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/scalingProgress"
        app:layout_constraintEnd_toEndOf="@+id/sweatingProgress"
        app:layout_constraintStart_toStartOf="@+id/scalingProgress"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <SeekBar
        android:id="@+id/scalingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/burningProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itchSeekbar" />

    <TextView
        android:id="@+id/scalingProgress"
        android:layout_width="194dp"
        android:layout_height="33dp"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:text="Scaling/Peeling: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/scalingSeekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itchSeekbar" />

    <SeekBar
        android:id="@+id/burningSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/sweatingSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/burningProgress" />

    <TextView
        android:id="@+id/burningProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="16dp"
        android:text="Burning: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sweatingSeekbar"
        app:layout_constraintEnd_toEndOf="@+id/sweatingProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingSeekbar" />

    <SeekBar
        android:id="@+id/sweatingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toTopOf="@+id/crustingProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burningProgress" />

    <TextView
        android:id="@+id/sweatingProgress"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:layout_marginBottom="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:text="Sweating: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalingProgress" />

    <SeekBar
        android:id="@+id/crustingSeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:max="9"
        app:layout_constraintBottom_toBottomOf="@+id/crustingProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crustingProgress" />

    <TextView
        android:id="@+id/crustingProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="1dp"
        android:text="Crusting: 1/10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/radioButtonChoices"
        app:layout_constraintEnd_toEndOf="@+id/burningProgress"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/sweatingSeekbar" />

    <Button
        android:id="@+id/resultButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/buttoncurve"
        android:text="DONE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButtonChoices" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Patient History"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="16dp"
        android:text="Number of days: "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="1dp"
        android:text="1 = No Symptom   2-4 = Mild Symptom   7-10 = Extreme Symptom"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/itchSeekbar"
        app:layout_constraintStart_toStartOf="@+id/itchProgress"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/editDays"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:layout_marginStart="134dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="131dp"
        android:layout_height="24dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Is it bleeding?"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButtonChoices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crustingSeekbar" />

    <RadioGroup
        android:id="@+id/radioButtonChoices"
        android:layout_width="186dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/resultButton"
        app:layout_constraintEnd_toEndOf="@+id/resultButton"
        app:layout_constraintTop_toBottomOf="@+id/crustingProgress" >

        <RadioButton
            android:id="@+id/radioYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:checked="false" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>