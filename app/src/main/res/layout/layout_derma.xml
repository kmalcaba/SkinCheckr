<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/derma_layout">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/grayBackground"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dermatologist Name"
                android:id="@+id/derma_name"
                android:fontFamily="@font/san_francisco"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 years experience"
                android:id="@+id/derma_year"
                android:textSize="18sp"
                android:layout_below="@+id/derma_fee"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_outline_school_24px"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/derma_loc"
                android:layout_below="@id/derma_name"
                android:text="Paco, Manila"
                android:padding="5dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_outline_place_24px"
                android:drawablePadding="10dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/derma_fee"
                android:layout_below="@id/derma_loc"
                android:text="P400"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_outline_local_atm_24px"
                android:drawablePadding="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:layout_below="@id/derma_year"
                android:background="@drawable/buttoncurve"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/whiteText"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/derma_btn"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>