<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/recycler_parent_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/grayBackground"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/diagnosed_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Skin Disease"
                android:id="@+id/disease_name"
                android:fontFamily="@font/san_francisco"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/diagnosed_image"
                android:padding="5dp"
                />
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/percentage"-->
                <!--android:fontFamily="@font/san_francisco"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="15sp"-->
                <!--android:layout_below="@+id/disease_name"-->
                <!--android:text="%"-->
                <!--android:layout_toRightOf="@+id/diagnosed_image"-->
                <!--android:padding="5dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:id="@+id/disease_summary"
                android:fontFamily="@font/san_francisco"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_below="@+id/disease_name"
                android:layout_toRightOf="@+id/diagnosed_image"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click image to learn more about this skin disease."
                android:id="@+id/more_info"
                android:textStyle="italic"
                android:textSize="11sp"
                android:fontFamily="@font/san_francisco"
                android:layout_below="@+id/disease_summary"
                android:layout_toRightOf="@+id/diagnosed_image"
                android:padding="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>